{
  "compilerOptions": {
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "commonjs",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
}
